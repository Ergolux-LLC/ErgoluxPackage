import os
import logging
import importlib

from app.interfaces.relationaldb.postgres_adapter import PostGresAdapter
from app.models.{{ table_name }} import {{ table_name|capitalize }}

logger = logging.getLogger(__name__)

def seed_{{ table_name }}(adapter: PostGresAdapter):
    if os.getenv("ENV", "").lower() != "dev":
        return

    session = adapter.db
    try:
        if session.query({{ table_name|capitalize }}).first():
            return  # already seeded

        module_path = f"app.dev.seed_data.{{ table_name }}"
        func_name = f"get_{{ table_name }}_seed_data"

        try:
            seed_module = importlib.import_module(module_path)
            get_records = getattr(seed_module, func_name)
        except (ImportError, AttributeError) as e:
            logger.warning(f"No seed function found for '{{ table_name }}': {e}")
            return

        records = get_records()
        session.add_all(records)
        session.commit()
        logger.info("Development seed data inserted for '{{ table_name }}'")
    except Exception as e:
        session.rollback()
        logger.warning(f"Failed to seed dev data for '{{ table_name }}': {e}")
    finally:
        session.close()
